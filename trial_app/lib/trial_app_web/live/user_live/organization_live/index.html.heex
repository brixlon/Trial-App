<div class="flex h-screen bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-50">
      <!-- Sidebar -->
      <.live_component
        module={TrialAppWeb.SidebarComponent}
        id="sidebar"
        current_scope={@current_scope}
        socket={@socket}
      />

      <!-- Main Content -->
      <main class="flex-1 overflow-y-auto ml-64">
        <!-- Enhanced Header Bar with Glassmorphism -->
        <div class="bg-white/80 backdrop-blur-xl border-b border-indigo-100/50 sticky top-0 z-10 shadow-sm">
